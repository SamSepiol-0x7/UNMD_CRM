<UserControl
	x:Class="ASC.Salary.SalaryView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:ASC" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" xmlns:salary="clr-namespace:ASC.Salary" xmlns:converters="clr-namespace:ASC.Converters" xmlns:extensions="clr-namespace:ASC.Extensions" xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm" xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" xmlns:objects="clr-namespace:ASC.Objects" xmlns:controls="clr-namespace:ASC.View.Controls"
	DataContext="{dxmvvm:ViewModelSource Type={x:Type salary:SalaryViewModel}}">
	<FrameworkElement.Resources>
		<ResourceDictionary>
			<converters:IntReserveState2StringConverter
				x:Key="State2StringConverter" />
			<converters:BoolInverterConverter
				x:Key="BoolInverterConverter" />
			<converters:AclBooleanConverter
				x:Key="AclBooleanConverter" />
			<ContextMenu
				DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
				x:Key="RowMenu">
				<MenuItem
					Header="{DynamicResource Back2Store}"
					Command="{Binding Back2StoreCommand}"
					Visibility="{Binding ConverterParameter=CAN_QUICK_SALE, Converter={StaticResource AclVis}}">
					<MenuItem.Icon>
						<Image
							Source="../Resources/ContextMMenu/Context1.png"
							Style="{StaticResource 16X16Image}" />
					</MenuItem.Icon>
				</MenuItem>
			</ContextMenu>
		</ResourceDictionary>
	</FrameworkElement.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="174*" />
			<RowDefinition
				Height="90" />
		</Grid.RowDefinitions>
		<dxwui:AppBar
			Background="#3f3f3f"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			ItemSpacing="5"
			HideMode="AlwaysVisible"
			Grid.Row="1"
			Grid.ColumnSpan="2">
			<dxwui:AppBarButton
				Label="{DynamicResource Print}"
				AllowGlyphTheming="True"
				HorizontalAlignment="Center"
				Visibility="{Binding PrintVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
				Command="{Binding View.Commands.ShowPrintPreview, ElementName=TableView1}"
				Glyph="{dx:DXImageGrayscale Image=Print_32x32.png}" />
			<dxwui:AppBarButton
				Label="{DynamicResource Load}"
				AllowGlyphTheming="True"
				HorizontalAlignment="Center"
				IsEllipseEnabled="False"
				Command="{Binding LoadReportCommand}"
				Glyph="{dx:DXImageGrayscale Image=Alignment_Center-Center_32x32.png}" />
			<dxwui:AppBarButton
				Label="{DynamicResource Add}"
				AllowGlyphTheming="True"
				HorizontalAlignment="Center"
				IsEllipseEnabled="False"
				Visibility="{Binding Path=IsEnabled, Converter={StaticResource BooleanToVisibilityConverter}, RelativeSource={RelativeSource Self}}"
				Command="{Binding NewAdditionalPaymentCommand}"
				Glyph="{dx:DXImageGrayscale Image=Add_32x32.png}" />
			<dxwui:AppBarButton
				Label="{DynamicResource Save}"
				AllowGlyphTheming="True"
				HorizontalAlignment="Center"
				IsEllipseEnabled="False"
				Visibility="{Binding Path=IsEnabled, Converter={StaticResource BooleanToVisibilityConverter}, RelativeSource={RelativeSource Self}}"
				Command="{Binding SaveAdditionalPaymentCommand}"
				Glyph="{dx:DXImageGrayscale Image=Save_32x32.png}" />
		</dxwui:AppBar>
		<TabControl
			Padding="0"
			HorizontalAlignment="Stretch"
			Margin="0,42,0,0"
			VerticalAlignment="Stretch"
			IsEnabled="{Binding ReportLoaded}"
			SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
			<TabItem
				Header="{DynamicResource Overview}">
				<Grid>
					<dxlc:LayoutControl
						ItemStyle="{StaticResource LeftMenuLayout}"
						HorizontalAlignment="Right"
						VerticalAlignment="Top"
						Orientation="Vertical"
						ItemSpace="5"
						Padding="10">
						<dxlc:LayoutGroup
							MinWidth="250"
							View="GroupBox"
							Orientation="Vertical"
							Header="{DynamicResource UserSalary}">
							<dxlc:LayoutItem
								Label="{DynamicResource Summ}">
								<dxe:TextEdit
									Style="{StaticResource NumericTextBox}"
									EditValue="{Binding UserSalaryReport.FinalPaySumm, Mode=TwoWay}">
									<dxmvvm:Interaction.Behaviors>
										<extensions:SelectAllOnMouseUpBehavior />
									</dxmvvm:Interaction.Behaviors>
								</dxe:TextEdit>
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource Payment}">
								<ComboBox
									DisplayMemberPath="Name"
									SelectedValuePath="Id"
									ItemsSource="{Binding PaymentOptionses}"
									SelectedValue="{Binding SelectedSalaryPaymentOption, Mode=TwoWay}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource Date}">
								<dxe:DateEdit
									AllowNullInput="False"
									ShowClearButton="False"
									EditValue="{Binding SalaryDate, Mode=TwoWay}"
									IsEnabled="{Binding Employee, Converter={StaticResource AclBooleanConverter}, ConverterParameter=CAN_BACKDATE_DOC, Source={x:Static objects:OfflineData.Instance}}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource IsCorrectInput}">
								<CheckBox
									Style="{StaticResource DefCheckBox}"
									IsChecked="{Binding SalaryCorrect, Mode=TwoWay}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem>
								<Button
									Content="{DynamicResource Pay}"
									Command="{Binding PaySalaryCommand}" />
							</dxlc:LayoutItem>
						</dxlc:LayoutGroup>
						<dxlc:LayoutGroup
							MinWidth="250"
							Orientation="Vertical"
							View="GroupBox"
							Header="{DynamicResource Advance}"
							Visibility="{Binding AdvanceVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
							<dxlc:LayoutItem
								Label="{DynamicResource Summ}">
								<dxe:TextEdit
									Style="{StaticResource NumericTextBox}"
									EditValue="{Binding AdvanceSumm, Mode=TwoWay}">
									<dxmvvm:Interaction.Behaviors>
										<extensions:SelectAllOnMouseUpBehavior />
									</dxmvvm:Interaction.Behaviors>
								</dxe:TextEdit>
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource Payment}">
								<ComboBox
									DisplayMemberPath="Name"
									SelectedValuePath="Id"
									ItemsSource="{Binding PaymentOptionses}"
									SelectedValue="{Binding SelectedAdvancePaymentOption, Mode=TwoWay}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource Date}">
								<dxe:DateEdit
									AllowNullInput="False"
									ShowClearButton="False"
									EditValue="{Binding AdvanceDate, Mode=TwoWay}"
									IsEnabled="{Binding Employee, Converter={StaticResource AclBooleanConverter}, ConverterParameter=CAN_BACKDATE_DOC, Source={x:Static objects:OfflineData.Instance}}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource IsCorrectInput}">
								<CheckBox
									Style="{StaticResource DefCheckBox}"
									IsChecked="{Binding AdvanceCorrect, Mode=TwoWay}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource Notes}"
								LabelVerticalAlignment="Top">
								<dxe:TextEdit
									VerticalContentAlignment="Top"
									MaxLength="254"
									Height="50"
									AcceptsReturn="True"
									TextWrapping="Wrap"
									EditValue="{Binding AdvanceNotes, Mode=TwoWay}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem>
								<Button
									Content="{DynamicResource Pay}"
									Command="{Binding PayAdvanceCommand}" />
							</dxlc:LayoutItem>
						</dxlc:LayoutGroup>
					</dxlc:LayoutControl>
					<dxlc:LayoutControl
						ItemStyle="{StaticResource LeftMenuLayout}"
						HorizontalAlignment="Left"
						VerticalAlignment="Top"
						Width="360"
						Orientation="Vertical"
						ItemSpace="5"
						Padding="10">
						<dxlc:LayoutGroup
							View="GroupBox"
							Header="{DynamicResource Overview}"
							Orientation="Vertical">
							<dxlc:LayoutItem
								Label="{DynamicResource SalaryRate}">
								<dxe:TextEdit
									Style="{StaticResource NumericTextBox}"
									IsReadOnly="True"
									EditValue="{Binding UserSalaryReport.MonthSalary, Mode=OneWay}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource SalaryRatePay}">
								<dxe:ButtonEdit
									AllowDefaultButton="False"
									VerticalContentAlignment="Center"
									EditValue="{Binding NewSalaryRate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
									<dxe:ButtonInfo
										ToolTip="{DynamicResource Apply}"
										ButtonKind="Simple"
										GlyphKind="Apply"
										Command="{Binding SalaryRateChangeCommand}" />
								</dxe:ButtonEdit>
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource SalaryWorksPay}">
								<dxe:TextEdit
									Style="{StaticResource NumericTextBox}"
									IsReadOnly="True"
									EditValue="{Binding UserSalaryReport.SummPayWorksUser, Mode=OneWay}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource SalarySalePay}">
								<dxe:TextEdit
									Style="{StaticResource NumericTextBox}"
									IsReadOnly="True"
									EditValue="{Binding UserSalaryReport.TotalPaySale, Mode=OneWay}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource IoDevices}">
								<dxe:TextEdit
									Style="{StaticResource NumericTextBox}"
									IsReadOnly="True"
									EditValue="{Binding UserSalaryReport.SummIoDevices, Mode=OneWay}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource PartsOnMaster}">
								<dxe:TextEdit
									Style="{StaticResource NumericTextBox}"
									IsReadOnly="True"
									EditValue="{Binding UserSalaryReport.NotInstalledUserPartsSumm, Mode=OneWay}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource AdditionalPayments}">
								<TextBox
									Foreground="#FF000000"
									HorizontalContentAlignment="Right"
									IsReadOnly="True"
									VerticalContentAlignment="Center"
									Text="{Binding UserSalaryReport.AddtionalPlus, StringFormat=N2, Mode=OneWay}">
									<FrameworkElement.Style>
										<Style
											TargetType="{x:Type TextBox}">
											<Setter
												Property="Background"
												Value="#FF90EE90" />
											<Style.Triggers>
												<DataTrigger
													Value="0"
													Binding="{Binding UserSalaryReport.AddtionalPlus}">
													<Setter
														Property="Background"
														Value="#00FFFFFF" />
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</FrameworkElement.Style>
								</TextBox>
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource AdditionalSubstract}">
								<TextBox
									Foreground="#FF000000"
									HorizontalContentAlignment="Right"
									IsReadOnly="True"
									VerticalContentAlignment="Center"
									Text="{Binding UserSalaryReport.AddtionalMinus, StringFormat=N2, Mode=OneWay}">
									<FrameworkElement.Style>
										<Style
											TargetType="{x:Type TextBox}">
											<Setter
												Property="Background"
												Value="{StaticResource ClientNotAnswerColor}" />
											<Style.Triggers>
												<DataTrigger
													Value="0"
													Binding="{Binding UserSalaryReport.AddtionalMinus}">
													<Setter
														Property="Background"
														Value="#00FFFFFF" />
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</FrameworkElement.Style>
								</TextBox>
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource Income}">
								<dxe:TextEdit
									Style="{StaticResource NumericTextBox}"
									Foreground="#FF0000FF"
									IsReadOnly="True"
									EditValue="{Binding UserSalaryReport.TotalPlus, Mode=OneWay}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource Advance}">
								<dxe:TextEdit
									Style="{StaticResource NumericTextBox}"
									Foreground="#FFFF0000"
									IsReadOnly="True"
									EditValue="{Binding UserSalaryReport.Advance, Mode=OneWay}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource AlreadyPay}">
								<dxe:TextEdit
									Style="{StaticResource NumericTextBox}"
									Foreground="#FFFF0000"
									IsReadOnly="True"
									EditValue="{Binding UserSalaryReport.AlreadyPayed, Mode=OneWay}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource Balance}">
								<dxe:TextEdit
									Style="{StaticResource NumericTextBox}"
									Foreground="#FF008000"
									IsReadOnly="True"
									EditValue="{Binding UserSalaryReport.LastSalary.balance, StringFormat=N0, Mode=OneWay}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource TotalPay}">
								<dxe:TextEdit
									Style="{StaticResource NumericTextBox}"
									Foreground="#FF008000"
									IsReadOnly="True"
									EditValue="{Binding UserSalaryReport.PaySumm, Mode=OneWay}" />
							</dxlc:LayoutItem>
						</dxlc:LayoutGroup>
					</dxlc:LayoutControl>
				</Grid>
			</TabItem>
			<TabItem
				Header="{DynamicResource Repairs}">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition
							Height="249*" />
						<RowDefinition
							Height="254*" />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition
							Width="300" />
						<ColumnDefinition
							Width="50*" />
						<ColumnDefinition
							Width="50*" />
					</Grid.ColumnDefinitions>
					<Border
						BorderThickness="1,0,0,0"
						BorderBrush="#FFD3D3D3"
						Grid.ColumnSpan="2"
						Grid.Column="1">
						<dxg:GridControl
							Name="TableView1"
							Margin="0,0,0,0"
							SelectedItem="{Binding SelectedRepair, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
							<FrameworkElement.Style>
								<Style
									BasedOn="{StaticResource DeDefTable}"
									TargetType="{x:Type dxg:GridControl}">
									<Setter
										Property="dxg:DataControlBase.ItemsSource"
										Value="{Binding UserSalaryReport.Repairs}" />
									<Style.Triggers>
										<DataTrigger
											Value="True"
											Binding="{Binding Path=IsChecked, ElementName=RepairsSourceSwitch}">
											<Setter
												Property="dxg:DataControlBase.ItemsSource"
												Value="{Binding UserSalaryReport.NonOutRepairs}" />
										</DataTrigger>
									</Style.Triggers>
								</Style>
							</FrameworkElement.Style>
							<FrameworkElement.Resources>
								<ResourceDictionary>
									<Style
										TargetType="{x:Type dxg:GridColumn}"
										x:Key="{x:Type dxg:GridColumn}">
										<Setter
											Property="dxg:BaseColumn.HorizontalHeaderContentAlignment"
											Value="Center" />
									</Style>
								</ResourceDictionary>
							</FrameworkElement.Resources>
							<dxmvvm:Interaction.Behaviors>
								<dxmvvm:EventToCommand
									EventTriggerBase_x0060_1.EventName="CustomUnboundColumnData"
									PassEventArgsToCommand="True"
									Command="{Binding RepairsCustomUnboundColumnDataCommand}" />
							</dxmvvm:Interaction.Behaviors>
							<dxg:GridColumn
								FieldName="{DynamicResource OrderNumber}"
								Width="100"
								VisibleIndex="0"
								Binding="{Binding id}">
								<dxg:ColumnBase.EditSettings>
									<dxe:TextEditSettings
										HorizontalContentAlignment="Center"
										MaskType="Numeric"
										Mask="d6"
										MaskUseAsDisplayFormat="True" />
								</dxg:ColumnBase.EditSettings>
							</dxg:GridColumn>
							<dxg:GridColumn
								Width="20*"
								FieldName="{DynamicResource Hardware}"
								Binding="{Binding DeviceOverview}" />
							<dxg:GridColumn
								FieldName="{DynamicResource RepairCost}"
								Binding="{Binding TotalRepairCost, Mode=OneWay}"
								Visible="{Binding Employee, Converter={StaticResource AclBooleanConverter}, ConverterParameter=VIEW_ALL_EMPLOYEES_WORK, Source={x:Static objects:OfflineData.Instance}}"
								ShowInColumnChooser="{Binding Employee, Converter={StaticResource AclBooleanConverter}, ConverterParameter=VIEW_ALL_EMPLOYEES_WORK, Source={x:Static objects:OfflineData.Instance}}">
								<dxg:ColumnBase.EditSettings>
									<dxe:TextEditSettings
										Style="{StaticResource GridClassicOrNot}" />
								</dxg:ColumnBase.EditSettings>
							</dxg:GridColumn>
							<dxg:GridColumn
								FieldName="{DynamicResource Work}"
								Binding="{Binding TotalUserWorksCost, Mode=OneWay}">
								<dxg:ColumnBase.EditSettings>
									<dxe:TextEditSettings
										Style="{StaticResource GridClassicOrNot}" />
								</dxg:ColumnBase.EditSettings>
							</dxg:GridColumn>
							<dxg:GridColumn
								FieldName="{DynamicResource AllParts}"
								Binding="{Binding TotalUserPartsCost, Mode=OneWay}"
								Visible="{Binding Employee, Converter={StaticResource AclBooleanConverter}, ConverterParameter=VIEW_ALL_EMPLOYEES_WORK, Source={x:Static objects:OfflineData.Instance}}"
								ShowInColumnChooser="{Binding Employee, Converter={StaticResource AclBooleanConverter}, ConverterParameter=VIEW_ALL_EMPLOYEES_WORK, Source={x:Static objects:OfflineData.Instance}}">
								<dxg:ColumnBase.EditSettings>
									<dxe:TextEditSettings
										Style="{StaticResource GridClassicOrNot}" />
								</dxg:ColumnBase.EditSettings>
							</dxg:GridColumn>
							<dxg:GridColumn
								FieldName="{DynamicResource Parts}"
								Binding="{Binding EmployeePartsCost, Mode=OneWay}">
								<dxg:ColumnBase.EditSettings>
									<dxe:TextEditSettings
										Style="{StaticResource GridClassicOrNot}" />
								</dxg:ColumnBase.EditSettings>
							</dxg:GridColumn>
							<dxg:GridColumn
								FieldName="Percent"
								Header="{DynamicResource Percent}"
								UnboundType="Integer" />
							<dxg:GridColumn
								FieldName="IsQuick"
								Visible="False"
								ShowInColumnChooser="False"
								AllowPrinting="False"
								Binding="{Binding quick_repair}" />
							<dxg:GridColumn
								FieldName="{DynamicResource Income}"
								Binding="{Binding MasterPart, Mode=OneWay}">
								<dxg:ColumnBase.EditSettings>
									<dxe:TextEditSettings
										Style="{StaticResource GridClassicOrNot}" />
								</dxg:ColumnBase.EditSettings>
							</dxg:GridColumn>
							<dxg:GridColumn
								FieldName="{DynamicResource OutDate}"
								Visible="{Binding Path=IsChecked, ElementName=RepairsSourceSwitch, Converter={StaticResource BoolInverterConverter}}"
								Binding="{Binding OutDateTime, Mode=OneWay}">
								<dxg:ColumnBase.EditSettings>
									<dxe:TextEditSettings
										HorizontalContentAlignment="Center"
										MaskType="DateTime"
										Mask="dd.MM.yyyy  HH:mm"
										MaskUseAsDisplayFormat="True" />
								</dxg:ColumnBase.EditSettings>
							</dxg:GridColumn>
							<dxg:GridControl.TotalSummary>
								<dxg:GridSummaryItem
									DisplayFormat=" {0:N2}"
									SummaryType="Sum"
									FieldName="{DynamicResource RepairCost}" />
								<dxg:GridSummaryItem
									DisplayFormat=" {0:N2}"
									SummaryType="Sum"
									FieldName="{DynamicResource Work}" />
								<dxg:GridSummaryItem
									DisplayFormat=" {0:N2}"
									SummaryType="Sum"
									FieldName="{DynamicResource AllParts}" />
								<dxg:GridSummaryItem
									DisplayFormat=" {0:N2}"
									SummaryType="Sum"
									FieldName="{DynamicResource Parts}" />
								<dxg:GridSummaryItem
									DisplayFormat=" {0:N2}"
									SummaryType="Sum"
									FieldName="{DynamicResource Income}" />
							</dxg:GridControl.TotalSummary>
							<dxg:GridControl.View>
								<dxg:TableView
									IsSynchronizedWithCurrentItem="True"
									ShowTotalSummary="True"
									AllowScrollAnimation="True"
									NavigationStyle="Row"
									ColumnFilterPopupMode="Excel"
									AllowEditing="False"
									AllowGrouping="False"
									AllowColumnMoving="True"
									ShowGroupPanel="False"
									ShowColumnHeaders="True"
									AllowMoveColumnToDropArea="False"
									ShowSearchPanelMode="Never"
									ShowBandsPanel="True"
									ShowIndicator="False"
									AllowBestFit="True"
									AllowColumnFiltering="False"
									ShowSelectionRectangle="False"
									ShowFixedTotalSummary="False"
									SummariesIgnoreNullValues="True"
									RowMinHeight="{Binding Employee.UiSettings.RowHeight, Source={x:Static objects:OfflineData.Instance}}"
									FontSize="{Binding Employee.UiSettings.FontSize, Source={x:Static objects:OfflineData.Instance}}">
									<dxmvvm:Interaction.Behaviors>
										<dxmvvm:EventToCommand
											EventTriggerBase_x0060_1.EventName="RowDoubleClick"
											Command="{Binding RepairClickCommand}" />
									</dxmvvm:Interaction.Behaviors>
								</dxg:TableView>
							</dxg:GridControl.View>
						</dxg:GridControl>
					</Border>
					<dxlc:LayoutControl
						ItemStyle="{StaticResource LeftMenuLayout}"
						Orientation="Vertical"
						ItemSpace="5"
						Padding="10">
						<dxlc:LayoutGroup
							View="GroupBox"
							Orientation="Vertical"
							Header="{DynamicResource Info}">
							<FrameworkElement.Resources>
								<ResourceDictionary>
									<Style
										TargetType="{x:Type TextBox}"
										x:Key="{x:Type TextBox}">
										<Setter
											Property="TextBoxBase.IsReadOnly"
											Value="True" />
									</Style>
								</ResourceDictionary>
							</FrameworkElement.Resources>
							<dxlc:LayoutItem
								Label="{DynamicResource PayRepair}">
								<TextBox
									Text="{Binding SelectedUser.pay_repair, Mode=OneWay}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource PayRepairQuick}">
								<TextBox
									Text="{Binding SelectedUser.pay_repair_quick, Mode=OneWay}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource PayCartridgeRefill}"
								Visibility="{Binding cartridge_enable, Source={x:Static local:Auth.Config}, Converter={StaticResource BooleanToVisibilityConverter}}">
								<TextBox
									Text="{Binding SelectedUser.pay_cartridge_refill, Mode=OneWay}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource ToPayoff}">
								<TextBox
									Text="{Binding UserSalaryReport.SummPayWorksUser, StringFormat=N0, Mode=OneWay}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource ReadyAndInService}">
								<TextBox
									Text="{Binding UserSalaryReport.SummNonOutWorks, StringFormat=N0, Mode=OneWay}" />
							</dxlc:LayoutItem>
							<dxlc:LayoutItem
								Label="{DynamicResource ReadyAndInService}">
								<dxe:CheckEdit
									Name="RepairsSourceSwitch" />
							</dxlc:LayoutItem>
						</dxlc:LayoutGroup>
					</dxlc:LayoutControl>
					<DataGrid
						Style="{StaticResource defaultTable}"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Grid.Row="1"
						Grid.Column="1"
						ItemsSource="{Binding ItemWorks}">
						<DataGrid.Columns>
							<DataGridTextColumn
								Header="ID"
								ElementStyle="{StaticResource Center}"
								Binding="{Binding id, StringFormat={}{0:D6}}" />
							<DataGridTextColumn
								Header="{DynamicResource ItemName}"
								Binding="{Binding name}" />
							<DataGridTextColumn
								Header="{DynamicResource Price}"
								Width="90"
								Binding="{Binding price, StringFormat={}{0:N2}}" />
							<DataGridTemplateColumn
								Header="{DynamicResource Warranty}"
								Width="90">
								<DataGridTemplateColumn.CellTemplate>
									<DataTemplate>
										<ComboBox
											IsEnabled="False"
											DisplayMemberPath="Name"
											SelectedValuePath="Days"
